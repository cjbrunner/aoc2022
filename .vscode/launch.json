  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "envFile": "${workspaceFolder}/.env",
      "request": "launch",
      "stopOnEntry": true,
      "smartStep": false,
      "runtimeArgs": [
        "run",
        "${fileBasenameNoExtension}"
      ],
      "runtimeVersion": "16.17.1",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "outputCapture": "std"
    }
  ]
}